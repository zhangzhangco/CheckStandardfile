<?xml version="1.0" encoding="UTF-8"?>
<customUI onLoad="Ribbon_Load" xmlns="http://schemas.microsoft.com/office/2009/07/customui">
    <ribbon>
        <tabs>
            <tab idMso="TabAddIns" label="形式检查助手">
                <group id="Group1" label="形式检查项">
                    <button id="CoverChkBtn" onAction="CoverChk_Click" supertip="检查中文和英文的文件名格式" label="检查封面"  getImage="GetButtonImage"/>
                    <button id="StructureChkBtn" onAction="StructureChk_Click" supertip="1.删除多余空行;2.批注出悬置段;3.批注冗余标题;4.批注缺失标题" label="内容结构" getImage="GetButtonImage" />
                    <button id="ForewordChkBtn" onAction="ForewordChk_Click" supertip="检查时候含有要求性表述" label="检查引言" getImage="GetButtonImage" />
                    <button id="BibValidBtn" onAction="BibValid_Click" supertip="1.调整顺序;2.修正标点符号;3.引文有效性" label="引用文件" getImage="GetButtonImage" />
                    <button id="BibRefChkBtn" onAction="BibRefChk_Click" supertip="检查提及的文件是否存在于规范性引用文件和参考文献" label="引用提及" getImage="GetButtonImage" />
                    <button id="TermsChkBtn" onAction="TermsChk_Click" supertip="1.检查术语在文中是否出现两次以上;2.修复set2020的Bug(错误的回车和样式格式)" label="检查术语" getImage="GetButtonImage" />
                    <button id="AbbChkBtn" onAction="AbbChk_Click" supertip="1.缩略语排序;2.是否在文中出现" label="查缩略语" getImage="GetButtonImage" />
                    <button id="ListChkBtn" onAction="ListChk_Click" label="检查列项" getImage="GetButtonImage" />
                    <button id="BignumMdfBtn" onAction="BignumMdf_Click" supertip="有理数整数部分达5位,使用千位分隔符(,)" label="千位分隔" getImage="GetButtonImage" />
                    <button id="UnitMdfBtn" onAction="UnitMdf_Click" supertip="统一使用阿拉伯数字和英文单位符号,中间适当使用半角空格" label="量与单位" getImage="GetButtonImage" />
                    <button id="VarFontMdfBtn" onAction="VarFontMdf_Click" label="变量斜体" getImage="GetButtonImage" />
                    <button id="ApplyStyleBtn" onAction="ApplyStyle_Click" screentip="修复错误的中文与西文、数字的间距" label="间距修复" getImage="GetButtonImage" />
                </group>
                <group id="Group3" label="表格处理">
                    <button id="MergeTblBtn" onAction="MergeTbl_Click" label="连续合并" getImage="GetButtonImage" />
                    <button id="BeautifyTblBtn" onAction="BeautifyTbl_Click" supertip="1.连续表格美化;2.一字线填充空缺;3.删除末尾的句号" label="批量美化" getImage="GetButtonImage" />
                    <button id="SplitTblBtn" onAction="SplitTbl_Click" label="连续拆分" getImage="GetButtonImage" />
                </group>
                <group id="Group2" label="尊享功能">
                    <button id="SearchStdBtn" onAction="SearchStd_Click" supertip="查询国内外标准状态" label="标准查询" getImage="GetButtonImage" />
                    <button id="runBtn" onAction="Run_Click" supertip="一键自动完成" label="一键懒人" getImage="GetButtonImage" />
                    <menu id="AIwriting" label=" AI 写作" getImage="GetButtonImage">
                        <button id="TermBtn" onAction="OnTermAction" label="术语" keytip="T"/>
                        <button id="ClauseBtn" onAction="OnClauseAction" label="条文" keytip="C"/>
                    </menu>
                </group>
                <group id="Group4" label="关于">
                    <button id="DonateBtn" onAction="Donate_Click" label="捐赠" getImage="GetButtonImage" />
                    <button id="SettingBtn" onAction="Setting_Click" label="设置" getImage="GetButtonImage" />
                    <button id="AboutBtn" onAction="About_Click" label="关于" getImage="GetButtonImage" />
                </group>
            </tab>
        </tabs>
    </ribbon>
</customUI>
